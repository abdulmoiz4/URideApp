@{
    ViewBag.Title = "Home Page";
}


<script>
    function checkSearchChanged()
    {
        var currentValue = $('#txtsearch').val();
        var ajaxMethodUrl = "@(Url.Action("SearchName", "Home"))";
        //alert(currentValue);
        $("#txtsearch").autocomplete({
            source: function ( request,response)
            {
                var names = new Array();
                $.ajax({
                    async: false,
                    cache: false,
                    type: "Get",
                    url: ajaxMethodUrl,
                    data: { "SearchKeyword": $('#txtsearch').val() },
                    success: function (data)
                    {
                        for(var i = 0 ; i<data.length ; i++ )
                            names[i] = {label:data[i], id:data[i] };
                    }
                });
                response(names);
            }
        });
    }
